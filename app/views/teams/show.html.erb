<%= stylesheet_link_tag 'teams_show.css' %>

<h1><%= @team.name %></h1>
<p><%= @team.manager %></p>
<ul>
  <li><%= link_to "Edit", edit_team_path(@team) %></li>
  <li><%= link_to "Destroy", team_path(@team), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>

<table>
    <th style="color: #39FF14"> Player</th>
    <th style="color: #39FF14"> Position</th>
    <tr>
        <%= render @team.players %>
    </tr>
</table>